{
    "$schema": "https://vega.github.io/schema/vega-lite/v2.json",
    "title": "Emissions over Time",
    "width": 1155,
    "height": 400,
    "data": {"url": "data/continent_time.json"},
    "mark": {"type": "area", "tooltip": true},
    "encoding": {
      "x": {
        "field": "year", "type": "ordinal", "axis": {"labels": false}
      },
      "y": {
        "field": "emissions", 
        "type": "quantitative"
      },
      "color": {
        "field": "continent",
        "type": "nominal",
        "scale": {"scheme": "set1"},
      }
    }
  }
  